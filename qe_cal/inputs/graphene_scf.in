&CONTROL
  calculation = 'scf',
  prefix = 'graphene',
  outdir = '/tmp/mingrui_qe_cal_tmp',
  pseudo_dir = '../pseudo/',
  tstress = .true.,
  tprnfor = .true.,
  verbosity='high',
/

&SYSTEM
  ibrav     = 0,  ! old is 4
  nat  = 2,
  ntyp = 1,
  ecutwfc = 3.0 
  ecutrho = 20.0 
  nosym = .true.
  noinv = .true.
  ! force_symmorphic = .true.,   ! Force symmorphic symmetry to avoid z-component issues
  ! nosym = .false.  
  ! noinv = .false.  
  ! lspinorb = .true.        ! Enable spin-orbit coupling
  ! noncolin = .true.,
/

&ELECTRONS
  mixing_beta = 0.7,
  conv_thr = 1.0d-8
/

ATOMIC_SPECIES
  C  12.011  C.pbe-n-kjpaw_psl.1.0.0.UPF

! ATOMIC_SPECIES
!   C  12.011  C.rel-pbe-n-rrkjus_psl.0.1.UPF

CELL_PARAMETERS {angstrom}
  2.13  1.23  0.0
  2.13 -1.23  0.0
  0.0   0.0   10.0

ATOMIC_POSITIONS {crystal}
  C 1/3 1/3 0.0
  C 2/3 2/3 0.0

K_POINTS {automatic}
  7 7 1 0 0 0
